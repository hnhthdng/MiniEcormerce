@page
@model AbbyWeb.Pages.Admin.FoodTypes.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Food Types List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>
                &nbsp;Create new FoodTypes
            </a>
        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Food Type Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var foodType in Model.FoodTypes)
            {
                <tr>
                    <td width="50%">@foodType.Id</td>
                    <td width="30%">@foodType.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="edit" asp-route-id="@foodType.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="delete" asp-route-id="@foodType.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
    </table>
</div>